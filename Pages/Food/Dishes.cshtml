@page
@model KnowledgeGraph.Pages.Food.DishesModel
@{
    ViewData["Title"] = "Dishes";
}

    <section class="section">

        <div class="container-fluid">

            <h1 class="mb-3">Dishes</h1>

            <div class="row">

                <div class="col">

                    <table class="table table-bordered table-hover">

                        @*
                        jsonResponse["names"].Count()
                        jsonResponse["values"].Count()
                        *@
                        <tr>
                            @foreach (var title in Model.jsonResponse["names"])
                            {
                                <th>@title</th>
                            }
                        </tr>

                        @foreach (var item in Model.jsonResponse["values"])
                        {
                            <tr>
                                @for (var i = 0; i < Model.jsonResponse["names"].Count(); i++)
                                {
                                    <td>@item[i]</td>
                                }
                            </tr>

                        }
                    </table>
                </div>
                <div class="col">

                    <img src="~/images/dashboard_example.png" alt="Dashboard Example" />
                </div>

            </div>

        </div>

    </section>